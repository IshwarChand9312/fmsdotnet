@model fms.Models.IUser

@{
    ViewData["Title"] = "login";
}

<h1 class="h-100 d-flex align-items-center justify-content-center">Login</h1>

<hr />
<div class="h-100 d-flex align-items-center justify-content-center">
    <div>
        <form asp-action="login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" class="col">
                <label asp-for="UserId" class="control-label">USER ID</label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group" class="col">
                <label asp-for="UserPassword" class="control-label">Password</label>
                <input asp-for="UserPassword" type="password" class="form-control" />
                <span asp-validation-for="UserPassword" class="text-danger"></span>
            </div>
            <div class= "col">
             
            </div>
            <div class="form-group h-100 d-flex align-items-center justify-content-center" style="margin-top:15px;">
                <input type="submit" value="login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

